<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.fronted.controllers.DashboardController"
      stylesheets="@/css/dashboard.css"
      styleClass="dashboard-content"
      spacing="20"
      alignment="TOP_CENTER"
      maxWidth="1200" maxHeight="650"
      minWidth="800" minHeight="500"
      prefWidth="1000" prefHeight="600">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Header del dashboard -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="dashboard-header">
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label fx:id="welcomeLabel" styleClass="welcome-title" text="¡Bienvenido!"/>
            <Label fx:id="userEmailLabel" styleClass="user-email" text="usuario@unicauca.edu.co"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Cerrar Sesión" styleClass="logout-btn" onAction="#handleLogout"/>
    </HBox>

    <!-- Contenido principal del dashboard -->
    <VBox styleClass="dashboard-main" spacing="30" VBox.vgrow="ALWAYS">

        <!-- Tarjetas de resumen -->
        <HBox spacing="20" styleClass="summary-cards">
            <VBox styleClass="summary-card" spacing="10">
                <Label text="Mensajes" styleClass="card-title"/>
                <Label text="12" styleClass="card-value"/>
                <Label text="+2 desde ayer" styleClass="card-subtext"/>
            </VBox>

            <VBox styleClass="summary-card" spacing="10">
                <Label text="Notas" styleClass="card-title"/>
                <Label text="4.5" styleClass="card-value"/>
                <Label text="Promedio actual" styleClass="card-subtext"/>
            </VBox>

            <VBox styleClass="summary-card" spacing="10">
                <Label text="Clases" styleClass="card-title"/>
                <Label text="6" styleClass="card-value"/>
                <Label text="Este semestre" styleClass="card-subtext"/>
            </VBox>
        </HBox>

        <!-- Sección de actividades recientes -->
        <VBox spacing="15" styleClass="activity-section">
            <Label text="Actividades Recientes" styleClass="section-title"/>
            <VBox styleClass="activity-list" spacing="10">
                <HBox spacing="10" styleClass="activity-item">
                    <ImageView fitWidth="24" fitHeight="24" styleClass="activity-icon">
                        <Image url="@/img/icon_assignment.png"/>
                    </ImageView>
                    <Label text="Nueva tarea asignada en Matemáticas" styleClass="activity-text"/>
                    <Label text="Hace 2 horas" styleClass="activity-time"/>
                </HBox>
                <HBox spacing="10" styleClass="activity-item">
                    <ImageView fitWidth="24" fitHeight="24" styleClass="activity-icon">
                        <Image url="@/img/icon_message.png"/>
                    </ImageView>
                    <Label text="Mensaje del profesor de Física" styleClass="activity-text"/>
                    <Label text="Hace 5 horas" styleClass="activity-time"/>
                </HBox>
                <HBox spacing="10" styleClass="activity-item">
                    <ImageView fitWidth="24" fitHeight="24" styleClass="activity-icon">
                        <Image url="@/img/icon_calendar.png"/>
                    </ImageView>
                    <Label text="Examen parcial programado para viernes" styleClass="activity-text"/>
                    <Label text="Ayer" styleClass="activity-time"/>
                </HBox>
            </VBox>
        </VBox>

        <!-- Accesos rápidos -->
        <VBox spacing="15" styleClass="quick-access-section">
            <Label text="Accesos Rápidos" styleClass="section-title"/>
            <HBox spacing="15" styleClass="quick-access-buttons">
                <Button text="Mi Perfil" styleClass="quick-btn" onAction="#handleProfile"/>
                <Button text="Configuración" styleClass="quick-btn" onAction="#handleSettings"/>
                <Button text="Notificaciones" styleClass="quick-btn" onAction="#handleNotifications"/>
                <Button text="Calificaciones" styleClass="quick-btn"/>
                <Button text="Horarios" styleClass="quick-btn"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>