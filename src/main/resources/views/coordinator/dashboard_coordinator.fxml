<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.fronted.controllers.DashboardCoordinadorController"
      stylesheets="@../../css/dashboardcoordinator.css"
      styleClass="dashboard-content"
      spacing="30">

    <padding>
        <Insets top="40" right="60" bottom="40" left="60"/>
    </padding>

    <!-- Título de la sección -->
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Gestión de Proyectos: Coordinador" styleClass="section-title"/>
        <Label text="Visualiza y gestiona los proyectos según su estado" styleClass="section-subtitle"/>
    </VBox>

    <!-- Tarjetas de estado -->
    <GridPane styleClass="cards-grid" hgap="40" vgap="30">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
        </columnConstraints>

        <!-- Tarjeta: Proyectos Pendientes -->
        <VBox styleClass="status-card card-pending" GridPane.columnIndex="0">
            <padding>
                <Insets top="40" right="30" bottom="40" left="30"/>
            </padding>
            <VBox alignment="CENTER" spacing="20">
                <!-- Icono circular -->
                <StackPane styleClass="card-icon-container icon-pending">
                    <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                        <Image url="@../../images/icons/folder.png"/>
                    </ImageView>
                </StackPane>

                <!-- Contenido de la tarjeta -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Pendientes" styleClass="card-title"/>
                    <Label fx:id="pendientesCount" text="0" styleClass="card-count"/>
                    <Label text="Proyectos en revisión" styleClass="card-subtitle"/>
                </VBox>

                <!-- Botón de acción -->
                <Button text="Ver Detalles" styleClass="card-button button-pending"
                        onAction="#verProyectosPendientes"/>
            </VBox>
        </VBox>

        <!-- Tarjeta: Proyectos Aprobados -->
        <VBox styleClass="status-card card-approved" GridPane.columnIndex="1">
            <padding>
                <Insets top="40" right="30" bottom="40" left="30"/>
            </padding>
            <VBox alignment="CENTER" spacing="20">
                <!-- Icono circular -->
                <StackPane styleClass="card-icon-container icon-approved">
                    <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                        <Image url="@../../images/icons/check.png"/>
                    </ImageView>
                </StackPane>

                <!-- Contenido de la tarjeta -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Aprobados" styleClass="card-title"/>
                    <Label fx:id="aprobadosCount" text="0" styleClass="card-count"/>
                    <Label text="Proyectos aprobados" styleClass="card-subtitle"/>
                </VBox>

                <!-- Botón de acción -->
                <Button text="Ver Detalles" styleClass="card-button button-approved"
                        onAction="#verProyectosAprobados"/>
            </VBox>
        </VBox>

        <!-- Tarjeta: Proyectos Rechazados -->
        <VBox styleClass="status-card card-rejected" GridPane.columnIndex="2">
            <padding>
                <Insets top="40" right="30" bottom="40" left="30"/>
            </padding>
            <VBox alignment="CENTER" spacing="20">
                <!-- Icono circular -->
                <StackPane styleClass="card-icon-container icon-rejected">
                    <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                        <Image url="@../../images/icons/x.png"/>
                    </ImageView>
                </StackPane>

                <!-- Contenido de la tarjeta -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Rechazados" styleClass="card-title"/>
                    <Label fx:id="rechazadosCount" text="0" styleClass="card-count"/>
                    <Label text="Proyectos rechazados" styleClass="card-subtitle"/>
                </VBox>

                <!-- Botón de acción -->
                <Button text="Ver Detalles" styleClass="card-button button-rejected"
                        onAction="#verProyectosRechazados"/>
            </VBox>
        </VBox>
    </GridPane>

    <!-- Sección adicional: Acciones rápidas -->
    <VBox styleClass="quick-actions-section" spacing="20">
        <Label text="Acciones Rápidas" styleClass="actions-title"/>

        <HBox styleClass="actions-container" spacing="20">
            <Button text="Nuevo Proyecto" styleClass="action-button" onAction="#nuevoProyecto">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                        <Image url="@../../images/icons/add.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button text="Reportes" styleClass="action-button" onAction="#generarReportes">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                        <Image url="@../../images/icons/report.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button text="Configuración" styleClass="action-button" onAction="#abrirConfiguracion">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                        <Image url="@../../images/icons/settings.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</VBox>