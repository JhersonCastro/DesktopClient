<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.fronted.controllers.PendientesListaController"
            stylesheets="@../../css/coordinator-lista.css"
            styleClass="cnp-scroll">
    <VBox spacing="20"
          styleClass="dashboard-content">

        <padding>
            <Insets top="40" right="60" bottom="40" left="60"/>
        </padding>

        <VBox spacing="10" styleClass="cnp-header">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button onAction="#regresar" styleClass="cnp-back-button">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                            <Image url="@../../images/icons/back.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>

        <!-- TÍTULO -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Proyectos Pendientes" styleClass="section-title"/>
            <Label text="Seleccione un proyecto para evaluar" styleClass="section-subtitle"/>
        </VBox>

        <!-- CONTENEDOR DE TARJETAS -->
        <FlowPane fx:id="proyectosContainer" hgap="20" vgap="20" prefWrapLength="800">

            <!-- TARJETA DE EJEMPLO 1 -->
            <VBox spacing="10" styleClass="project-card">
                <Label text="Título: Sistema de Control Académico" styleClass="card-title"/>
                <Label text="Estudiante: Juan Pérez" styleClass="card-info"/>
                <Label text="Modalidad: Investigación" styleClass="card-info"/>
                <Label text="Director: Ing. Luis Martínez" styleClass="card-info"/>
                <Button text="Evaluar" styleClass="card-button"/>
            </VBox>

            <!-- TARJETA DE EJEMPLO 2 -->
            <VBox spacing="10" styleClass="project-card">
                <Label text="Título: Práctica Profesional en Electrónica" styleClass="card-title"/>
                <Label text="Estudiante: María Gómez" styleClass="card-info"/>
                <Label text="Modalidad: Práctica Profesional" styleClass="card-info"/>
                <Label text="Director: Ing. Ana Fernández" styleClass="card-info"/>
                <Button text="Evaluar" styleClass="card-button"/>
            </VBox>

            <!-- TARJETA DE EJEMPLO 3 -->
            <VBox spacing="10" styleClass="project-card">
                <Label text="Título: Desarrollo de App Educativa" styleClass="card-title"/>
                <Label text="Estudiante: Juan David Martínez" styleClass="card-info"/>
                <Label text="Modalidad: Investigación" styleClass="card-info"/>
                <Label text="Director: Ing. Jorge Hernández" styleClass="card-info"/>
                <Button text="Evaluar" styleClass="card-button"/>
            </VBox>

        </FlowPane>

    </VBox>
</ScrollPane>