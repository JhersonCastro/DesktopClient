<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="600" maxWidth="500" minHeight="550" minWidth="380" prefHeight="580" prefWidth="450" styleClass="login-content" stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fronted.controllers.LoginController">

